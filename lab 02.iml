Faza 1 – Nxehu me operatorë aritmetikë (≈ 20 min)
public class OperatorWarmup {
    public static void main(String[] args) {
        
        int a = 17, b = 5, c = 2;
        System.out.println("a + b = " + (a + b));  
        System.out.println("a - b = " + (a - b));  
        System.out.println("a * b = " + (a * b));   
        System.out.println("a / b = " + (a / b));   
        System.out.println("a % b = " + (a % b)); 

        System.out.println("\nVlera fillestare e b: " + b); 
        System.out.println("b++ = " + (b++)); 
        System.out.println("Pas b++ → b = " + b);
        System.out.println("++b = " + (++b)); 
        System.out.println("Pas ++b → b = " + b); 
        System.out.println("--b = " + (--b)); 
        System.out.println("Pas --b → b = " + b);

        b = 5; 
        int r = b++ * c;
        System.out.println("\nShembull me b++:");
        System.out.println("para: b = 5, r = " + r); 
        System.out.println("pas: b = " + b);

        b = 5; 
        r = ++b * c; 
        System.out.println("\nShembull me ++b:");
        System.out.println("para: b = 5, r = " + r); 
        System.out.println("pas: b = " + b); 
    }
}

Faza 2 – Krahasime & logjikë (≈ 25 min)

import java.util.Scanner;

public class CompareLogicDemo {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

       
        System.out.print("Shkruaj moshen: ");
        int mosha = sc.nextInt();

        System.out.print("A është nxënës? (true/false): ");
        boolean eshteNxenes = sc.nextBoolean();

        boolean zbritjaLejohet = (mosha < 18 || eshteNxenes == true);

        boolean zbritjeShtese = (mosha < 12 && eshteNxenes == true);

        System.out.println("Zbritja lejohet: " + zbritjaLejohet);
        System.out.println("Zbritje shtesë 2 lek: " + zbritjeShtese);
    }
}

Faza 3 – Precedenca & kllapat (≈ 25 min)

public class PrecedenceDemo {
    public static void main(String[] args) {
        
        int r1 = 10 + 2 * 5 - 6 / 3;
      
        System.out.println("r1 = " + r1); // 18

        int r2 = ((10 + 2) * (5 - 6)) / 3;
        System.out.println("r2 = " + r2); // -4
        int x = 3;
        int y = x++ + ++x;

        System.out.println("x = " + x); // 5
        System.out.println("y = " + y); // 8

        int ndarjeInt = 5 / 2;    
        double ndarjeDouble = 5 / 2.0; 
        System.out.println("5 / 2 (int) = " + ndarjeInt);
        System.out.println("5 / 2.0 (double) = " + ndarjeDouble);
    }
}

Faza 4 – Krahasimi i double me epsilon (≈ 25 min)

import java.util.Scanner;

public class DoubleCompare {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Shkruaj tarifa teorike: ");
        double tarifaTeorike = sc.nextDouble();

        System.out.print("Shkruaj tarifa të llogaritur: ");
        double tarifaLlogaritur = sc.nextDouble();

        final double EPS = 0.0001;

        boolean baraziSakte = tarifaTeorike == tarifaLlogaritur;

        boolean baraziPerafert = Math.abs(tarifaTeorike - tarifaLlogaritur) < EPS;

        System.out.println("Barazi e saktë (==): " + baraziSakte);
        System.out.println("Barazi e përafërt (epsilon): " + baraziPerafert);

        System.out.println("\nPse? Sepse krahasimi me == nuk funksionon mirë me numra me presje dhjetore.");
        System.out.println("Përdorimi i EPS lejon tolerancë për gabime të vogla numerike.");
    }
}

Faza 5 – Mini-aplikacioni “Tarifa mujore” (≈ 40 min)

import java.util.Scanner;

public class MonthlyFare {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Shkruaj numrin e ditëve të punës: ");
        int ditePune = sc.nextInt();

        System.out.print("Shkruaj çmimin ditor: ");
        double cmimDitor = sc.nextDouble();

        System.out.print("A është nxënës? (true/false): ");
        boolean eshteNxenes = sc.nextBoolean();

        System.out.print("Shkruaj distancën në km: ");
        int distanceKm = sc.nextInt();

        double tarifaBaze = ditePune * cmimDitor;
        System.out.println("Tarifa bazë: " + tarifaBaze);

        double pasZbritjesNxenes = eshteNxenes ? tarifaBaze * 0.9 : tarifaBaze;
        System.out.println("Pas zbritjes nxënësi (nëse aplikohet): " + pasZbritjesNxenes);

        double pasShtesesDistance = (distanceKm > 10) ? pasZbritjesNxenes * 1.05 : pasZbritjesNxenes;
        System.out.println("Pas shtesës distancë (" + distanceKm + " km): " + pasShtesesDistance);

        double pasKuponit = (ditePune >= 22 && !eshteNxenes) ? pasShtesesDistance - 200 : pasShtesesDistance;
        if (pasKuponit < 0) pasKuponit = 0;
        System.out.println("Pas kuponit besnikëri: " + Math.round(pasKuponit));

        int totaliLek = (int) Math.round(pasKuponit);
        System.out.println("Totali (lek): " + totaliLek);
    }
}



